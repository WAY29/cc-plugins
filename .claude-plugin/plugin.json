{
    "name": "super-brain",
    "version": "0.3.0",
    "description": "Autonomous Computational Unit with RIPER-5 Workflow & Strict Three-Tier Research Proto",
    "author": {
        "name": "Longlone"
    },
    "homepage": "https://github.com/way29/cc-plugins",
    "repository": "https://github.com/way29/cc-plugins",
    "license": "MIT",
    "mcpServers": {
        "context7": {
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp",
                "--api-key",
                "${CONTEXT7_API_KEY}"
            ]
        },
        "auggie": {
            "command": "npx",
            "args": [
                "-y",
                "@augmentcode/auggie@latest",
                "--mcp"
            ],
            "env": {
                "AUGMENT_API_TOKEN": "${AUGGIE_API_TOKEN}",
                "AUGMENT_API_URL": "${AUGGIE_API_URL}"
            }
        }
    },
    "skills": [
        "./skills/brainstorming"
    ],
    "commands": [
        "./skills/brainstorming/brainstorming.md"
    ]
}